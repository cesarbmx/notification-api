<?xml version="1.0" encoding="utf-8"?>

<log4net>
  <appender name="SplunkLocalFileAppender_Info" type="log4net.Appender.RollingFileAppender">
    <file type="log4net.Util.PatternString" value="C:\\Splunk_logs\\NotificationService\\Info.log" />
    <appendToFile value="true" />
    <staticLogFileName value="true" />
    <rollingStyle value="Date" />
    <datePattern value="yyyy-MM-dd'.log'" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss.fff} Level=%level, App=NotificationService, Environment=Development, %message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="INFO" />
      <levelMax value="INFO" />
    </filter>
  </appender>
  <appender name="SplunkLocalFileAppender_Error" type="log4net.Appender.RollingFileAppender">
    <file type="log4net.Util.PatternString" value="C:\\Splunk_logs\\NotificationService\\Error.log" />
    <appendToFile value="true" />
    <staticLogFileName value="true" />
    <rollingStyle value="Date" />
    <datePattern value="yyyy-MM-dd'.log'" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss.fff} Level=%level, App=NotificationService, Environment=Development, %message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="ERROR" />
      <levelMax value="FATAL" />
    </filter>
  </appender>
  <appender name="Console" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss.fff} Level=%level, %message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="INFO" />
      <levelMax value="FATAL" />
    </filter>
  </appender>
  <root>
    <level value="ALL" />
    <appender-ref ref="SplunkLocalFileAppender_Info" />
    <appender-ref ref="SplunkLocalFileAppender_Error" />
    <appender-ref ref="Console" />
  </root>
</log4net>
